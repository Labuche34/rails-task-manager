<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0 text-primary fw-bold">My tasks :</h1>
        <%= link_to "Add a new task", tasks_new_path, class: "btn btn-success shadow-sm" %>
      </div>

      <ul class="list-group shadow-sm">
        <% @tasks.each do |task| %>
          <li class="list-group-item d-flex justify-content-between align-items-center py-3">
            <div>
              <%= link_to task.title, task_path(task), class: "fw-semibold text-decoration-none text-dark fs-5" %>
              <div class="text-muted small"><%= truncate(task.details, length: 60) %></div>
            </div>
            <div class="btn-group">
              <%= link_to "Delete", task_path(task), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm ms-2" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
